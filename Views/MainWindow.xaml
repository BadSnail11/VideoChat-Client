<Window x:Class="VideoChat_Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Видеочат" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель контактов -->
        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Поиск пользователей -->
                <StackPanel DockPanel.Dock="Top" Background="#F5F5F5">
                    <TextBlock Text="Поиск пользователей" 
                               FontSize="16"
                               FontWeight="Bold"
                               Padding="10,10,10,5"/>

                    <StackPanel Orientation="Horizontal" Margin="10,0,10,10">
                        <TextBox x:Name="SearchTextBox" 
                                 Width="150"
                                 Padding="5"
                                 VerticalContentAlignment="Center"/>
                        <Button Content="Найти" 
                                Margin="5,0,0,0"
                                Padding="10,5"
                                Click="SearchButton_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Список контактов -->
                <ListView x:Name="ContactsListView"
                          SelectionChanged="ContactsListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Ellipse Width="40" Height="40" Fill="LightBlue"/>
                                <TextBlock Text="{Binding Username}" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           FontSize="14"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>

        <!-- Рабочая область -->
        <Grid Grid.Column="1">
            <!-- Сообщение при отсутствии выбора -->
            <TextBlock x:Name="DefaultMessageText"
                       Text="Выберите или найдите пользователя"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Foreground="Gray"/>

            <!-- Панель пользователя -->
            <StackPanel x:Name="UserPanel" 
                        Visibility="Collapsed">
                <!-- Информация о найденном пользователе -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,20">
                    <Ellipse Width="60" Height="60" Fill="LightBlue"/>
                    <TextBlock x:Name="FoundUsernameText"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- История звонков -->
                <TextBlock Text="История звонков:"
                           Margin="10,20,10,5"
                           FontWeight="Bold"/>

                <ListView x:Name="CallHistoryListView"
                          Margin="10,0,10,10"
                          Height="200">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Дата" 
                                            DisplayMemberBinding="{Binding StartedAt, StringFormat={}{0:g}}"/>
                            <GridViewColumn Header="Статус" 
                                            DisplayMemberBinding="{Binding Status}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Кнопка звонка -->
                <Button x:Name="CallButton"
                        Content="Позвонить"
                        HorizontalAlignment="Center"
                        Padding="20,5"
                        Margin="0,10"
                        FontSize="14"
                        Click="CallButton_Click"/>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="ErrorText"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Margin="0,10"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>